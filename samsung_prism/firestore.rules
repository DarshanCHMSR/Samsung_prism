rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to specific collections for the multi-agent system
    match /login_attempts/{document} {
      allow read, write: if true; // Temporary open access for development
    }
    
    match /system_health/{document} {
      allow read, write: if true; // For connection testing
    }
  }
}
